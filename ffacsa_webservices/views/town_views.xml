<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="ffacsa_town_view_tree" model="ir.ui.view">
            <field name="name">ffacsa.town.view.form</field>
            <field name="model">ffacsa.town</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" />
                    <field name="code" />
                    <field name="state_id" />
                </tree>
            </field>
        </record>

        <record id="import_town_view_form" model="ir.ui.view">
            <field name="name">ffacsa.town.import.form</field>
            <field name="model">ffacsa.town</field>
            <field name="arch" type="xml">
                <form string="">
                      <footer>
                        <button name="action_import" string="Import" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ffacsa_town_import_action" model="ir.actions.act_window">
            <field name="name">Import Towns</field>
            <field name="res_model">ffacsa.town</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="import_town_view_form"/>
            <field name="target">new</field>
            <field name="context">{'default_name': 'DELETE AFTER IMPORT'}</field>
        </record>

        <record id="ffacsa_town_action" model="ir.actions.act_window">
            <field name="name">Towns</field>
            <field name="res_model">ffacsa.town</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="view_id" ref="ffacsa_town_view_tree"/>
        </record>

        <menuitem
            id="ffacsa_town_menu"
            name="Towns"
            action="ffacsa_town_action"
            parent="contacts.menu_localisation"
            sequence="10"/>

        <menuitem
            id="ffacsa_town_import_menu"
            name="Import Towns"
            action="ffacsa_town_import_action"
            parent="contacts.menu_localisation"
            sequence="10"/>

    </data>
    

</odoo>
