<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <menuitem
            id="ffacsa_data_menu"
            name="FFACSA Data"
            sequence="10"/>

        <menuitem
            id="ffacsa_data_submenu"
            name="Data"
            sequence="10"
            parent="ffacsa_data_menu"/>

        <record id="ffacsa_webservice_log_tree" model="ir.ui.view">
            <field name="name">ffacsa.webservice.log.view.tree</field>
            <field name="model">ffacsa.webservice.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date" />
                    <field name="type" />
                    <field name="operation" />
                    <field name="source_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
    
        <record id="ffacsa_webservice_log_form" model="ir.ui.view">
            <field name="name">ffacsa.webservice.log.view.form</field>
            <field name="model">ffacsa.webservice.log</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Process" name="action_process" type="object" class="oe_highlight" states="draft"/>
                        <button string="Process" name="action_process" type="object"  states="fail"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="date" />
                            <field name="type" />
                            <field name="operation" />
                            <field name="source_id" />
                        </group>
                        <separator string="Data"/>
                        <field name="data" nolabel="1" widget="ace" options="{'mode': 'python'}"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="ffacsa_webservice_log_action" model="ir.actions.act_window">
            <field name="name">Webservice Logs</field>
            <field name="res_model">ffacsa.webservice.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="model_ffacsa_webservice_log_action_process" model="ir.actions.server">
            <field name="name">Process</field>
            <field name="model_id" ref="ffacsa_webservices.model_ffacsa_webservice_log"/>
            <field name="binding_model_id" ref="ffacsa_webservices.model_ffacsa_webservice_log"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.action_process()</field>
        </record>

    <menuitem
        id="ffacsa_webservice_log_menu"
        name="Logs"
        action="ffacsa_webservice_log_action"
        parent="ffacsa_data_menu"
        sequence="10"/>
    
    </data>
    

</odoo>
