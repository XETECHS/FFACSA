<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="ffacsa_import_product_view_form" model="ir.ui.view">
            <field name="name">ffacsa.import.product.view.form</field>
            <field name="model">ffacsa.import.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <span class="text-muted">synchronize your contacts in FFACSA SAP with this method</span>
                        </group>
                        <group colspan="6">
                            <field name="product" />
                            <field name="price" />
                            <field name="inventory" />
                            
                            <field name="group" />
                            <field name="warehouse" />
                            <field name="categ" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="to_do" string="Import" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        
    <record id="action_import_products" model="ir.actions.act_window">
        <field name="name">Import FFACSA Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ffacsa.import.product</field>
        <field name="view_id" ref="ffacsa_import_product_view_form"/>
        <field name="target">new</field>
    </record>


    <menuitem id="import_product_submenu"
        name="Import FFACSA Products"
        parent="stock.menu_stock_root"
        action="action_import_products"/>
    
    
    </data>


</odoo>
